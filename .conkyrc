conky.config = {
    alignment = 'top_right',
    background = false,
    border_width = 10,
    cpu_avg_samples = 2,
	default_color = 'white',
    default_outline_color = 'white',
    default_shade_color = 'white',
    draw_borders = false,
    draw_graph_borders = true,
    draw_outline = false,
    draw_shades = false,
    use_xft = true,
    font = 'DejaVu Sans Mono:size=12',
    gap_x = 30,
    gap_y = 55,
    minimum_height = 5,
	minimum_width = 5,
    net_avg_samples = 2,
    no_buffers = true,
    out_to_console = false,
    out_to_stderr = false,
    extra_newline = false,
    own_window = true,
    own_window_argb_visual = true,
    own_window_argb_value = 150,
    own_window_class = 'Conky',
    own_window_type = 'desktop',
    stippled_borders = 0,
    update_interval = 1.0,
    uppercase = false,
    use_spacer = 'none',
    show_graph_scale = false,
    show_graph_range = false
}

conky.text = [[
${color yellow}$hr
${color}                 My PC Specs
${color yellow}$hr
################
# Machine info #
################
# ${scroll 16 $nodename - $sysname $kernel on $machine | }
${color grey}Conky -v:$color ${conky_version}
${color grey}Distribution:$color ${exec lsb_release -d | cut -c14-31} ${machine}
${color grey}Kernel:$color $sysname - ${kernel}
${color grey}Hostname:$color ${nodename}
${color grey}Uptime:$color $uptime
${color grey}Date Time:$color $time
${color yellow}$hr
############
# CPU Info #
############
${color grey}CPU:$color ${exec lscpu | grep 'Model name' | cut -c22-62}
${color grey}CPU Frequency:$color $freq MHz
# ${color grey}Frequency (in GHz):$color $freq_g
${color grey}CPU Usage:$color $cpu% ${color cyan}${cpubar 4}
${color grey}CPU Temp:$color ${exec sensors | grep 'Package id 0:' | cut -c17-20}°C
${color grey}CPU AIO_Pump:$color ${exec sensors | grep 'fan7:' | cut -b 24-31}
${color grey}Top Fan (cpu_fan):${color} ${exec sensors | grep 'fan2:' | cut -b 24-31}
${color grey}Front Fan[0]:${color} ${exec sensors | grep 'fan3:' | cut -b 25-31}
${color grey}Front Fan[1]:${color} ${exec sensors | grep 'fan4:' | cut -b 24-31}
${color grey}Rear Fan:${color} ${exec sensors | grep 'fan1:' | cut -b 24-31}
${color yellow}$hr
############
# GPU Info #
############
# Get GPU Fan Speed
# nvidia-settings -q all | grep  -i "Attribute 'GPUCurrentFanSpeedRPM'" | cut -d : -f4 | cut -d . -f1
${color grey}GPU:$color NVIDIA ${execpi .001 (nvidia-smi --query-gpu=gpu_name --format=csv,noheader)}
${color grey}GPU Driver -v:$color ${exec nvidia-smi --query-gpu=driver_version --format=csv,noheader}
${color grey}GPU Frequency:$color ${execpi .001 (nvidia-smi --query-gpu=clocks.sm --format=csv,noheader)}
${color grey}GPU Usage:$color ${execpi .001 (nvidia-smi --query-gpu=utilization.gpu --format=csv,noheader)}
${color grey}GPU Temp:$color ${execpi .001 (nvidia-smi --query-gpu=temperature.gpu --format=csv,noheader)}°C
${color grey}GPU Power:$color ${exec nvidia-smi --query-gpu=power.draw --format=csv,noheader}
# I have two fans in my GPU, if you have more or less, add or remove a row selecting the correct fan
# otherwise, if you have no fans, just delete these 2 next rows
${color grey}GPU Fan[0]:$color ${exec nvidia-settings -q all | grep  -i "Attribute 'GPUCurrentFanSpeedRPM'" | grep "fan:0" | cut -b 61- | cut -b -4} RPM
${color grey}GPU Fan[1]:$color ${exec nvidia-settings -q all | grep  -i "Attribute 'GPUCurrentFanSpeedRPM'" | grep "fan:1" | cut -b 61- | cut -b -4} RPM
${color grey}GPU VRAM Frequency:$color ${execpi .001 (nvidia-smi --query-gpu=clocks.mem --format=csv,noheader)}
${color grey}GPU VRAM Usage:${color} ${execpi .001 (nvidia-smi --query-gpu=utilization.memory --format=csv,noheader)}
${color yellow}$hr
############
# RAM Info #
############
${color grey}RAM Usage:$color $mem/$memmax - $memperc% ${color lightblue}${membar 4}
${color grey}Swap Usage:$color $swap/$swapmax - $swapperc% ${color lightblue}${swapbar 4}
${color yellow}$hr
################
# Storage Info #
################
${color grey}File systems:
 /: $color${fs_used /}/${fs_size /} ${color lightgreen}${fs_bar 6 /}
${color yellow}$hr
################
# Network Info #
################
${color grey}Networking:
 Up:$color ${upspeed eth0} ${color grey} - Down:$color ${downspeed eth0}
${color yellow}$hr
##################
# Processes Info #
##################
${color grey}Processes:$color $processes  ${color grey}Running:$color $running_processes
${color grey}Name               PID    CPU%   MEM%
${color lightgrey} ${top name 1} ${top pid 1} ${top cpu 1} ${top mem 1}
${color lightgrey} ${top name 2} ${top pid 2} ${top cpu 2} ${top mem 2}
${color lightgrey} ${top name 3} ${top pid 3} ${top cpu 3} ${top mem 3}
${color lightgrey} ${top name 4} ${top pid 4} ${top cpu 4} ${top mem 4}
${color yellow}$hr
]]
